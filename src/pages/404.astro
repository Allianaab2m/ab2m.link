---
import { Icon } from "astro-icon/components";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { url } from "@utils/url-utils";
---

<MainGridLayout title="Not found">
  <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
      <div class="card-base z-10 px-9 py-6 relative w-full text-black/75 dark:text-white/75">
        <h1 class="text-center text-[5rem] font-bold">404</h1>
        <p class="text-center text-[2rem]">Not found</p>
        <a href={url("/")}>
          <div class="flex items-center justify-center overflow-hidden transition overflow-ellipsis whitespace-nowrap text-black/75 dark:text-white/75">
            Return to top page
            <Icon name="material-symbols:chevron-right-rounded" class="text-[2rem] text-[var(--primary)]" />
          </div>
        </a>
      </div>
  </div>
</MainGridLayout>