---
const { post } = Astro.props;
---

<style>
  :root {
    --astro-code-color-text: rgb(206, 205, 195);
    --astro-code-color-background: rgb(16, 15, 15);
    --astro-code-token-constant: rgb(94, 64, 157);
    --astro-code-token-string: rgb(36, 131, 123);
    --astro-code-token-comment: rgb(52, 51, 49);
    --astro-code-token-keyword: rgb(102, 128, 11);
    --astro-code-token-parameter: seashell;
    --astro-code-token-function: rgb(188, 82, 21);
    --astro-code-token-string-expression: rgb(36, 131, 123);
    --astro-code-token-punctuation: rgb(188, 82, 21);
    --astro-code-token-link: rgb(32, 94, 166);
  }

  .entry :global(a) {
    @apply underline underline-offset-2 text-cyan-light hover:text-cyan;
  }

  .entry :global(h2) {
    @apply mt-4 mb-2 text-xl md:text-2xl font-bold underline underline-offset-4 before:content-['##_'] before:text-base-600;
  }
  .entry :global(h3) {
    @apply font-bold before:content-['###_'] before:text-base-600;
  }

  .entry :global(li) {
    @apply list-disc ml-8;
  }

  .entry :global(p) {
    @apply my-1;
  }

  .entry :global(pre) {
    @apply p-2;
  }

  .entry :global(code) {
    @apply bg-base-800 px-1 rounded-sm;
  }

  .entry :global(pre code) {
    @apply bg-base-black px-0;
  }
</style>

<div
  class="w-3/4 md:w-1/2 mx-auto my-4 text-base-black dark:text-base-paper [&_code]:text-base-paper"
>
  <div class="flex gap-2">
    <h1 class="text-2xl md:text-3xl xl:text-4xl font-bold">
      {post.data.title}
    </h1>
    <time
      class="mt-auto"
      datetime={new Date(post.data.published_at).toISOString()}
    >
      公開日: {
        new Intl.DateTimeFormat("ja-JP").format(
          Date.parse(post.data.published_at)
        )
      }
    </time>
  </div>
  <div class="border mb-4"></div>
  <div class="entry">
    <slot />
  </div>
</div>
